<!doctype html>
<html lang="es">
<head>
    <%- include('./templates/header') %>
</head>
<body  style="background-color:lavenderblush ;"> 
<div class="container">
    <div class="card">
        <div class="card-header">
            <%- include('./templates/navbar') %>
        </div>
        <div class="card-body" >
            <div class="row">
                <h3>Haga su pedido</h3>
            </div>
            <form method="post">
                <div class="row m-3">
                    <label for="code" class="col-sm-2 col-form-label">Cédula</label>
                    <div class="col-sm-4">
                        <input type="text" name="code" class="form-control" id="code" pattern="[0-9]+" required>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Apellidos</label>
                        <input type="text" name="lastName" id="lastName" class="form-control" pattern="[a-zA-z\s]+" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="name" class="form-label">Nombres</label>
                        <input type="text" name="name" id="name" class="form-control" pattern="[a-zA-z\s]+" required>
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-sm-6">
                        <label for="prod" class="form-label">Productos</label>
                        <select id="prod" class="form-select" name="prod" required>
                            <option value="">Seleccione el producto</option>
                            <%productos.forEach(prod => { %>
                                <option value = "<%= prod.code%>"><%= prod.name%></option>
                            <%})%>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="tipos" class="form-label">Variedades</label>
                        <select id="tipos" name="tipo" class="form-select">

                        </select>
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-sm-6">
                        <label for="email" class="form-label">Correo</label>
                        <input type="email" id="email" name="email" class="form-control" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="phone" class="form-label">Teléfono</label>
                        <input type="tel" id="phone" name="phone" class="form-control" pattern="[0-9]+" required>
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Género</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="F"
                                   checked style="background-color: lightpink; border: lightpink ;" >
                            <label class="form-check-label" for="gender" >
                                Femenino
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender"  value="M" style="background-color: lightpink; border: lightpink ;">
                            <label class="form-check-label" for="gender"  >
                                Masculino
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div class="row mt-3">
                    <button type="submit" class="btn btn-primary" style="background-color: lightpink; border: lightpink;">Enviar Datos</button>
                </div>
            </form>
        </div>
        
    </div>
</div>
<script>
    var  dataTipos = <%- JSON.stringify(tipos) %>
    var  dataProductos = <%- JSON.stringify(productos) %>
</script>
<%- include('./templates/footer') %>
</body>
</html>
